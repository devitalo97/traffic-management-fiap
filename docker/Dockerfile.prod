# Use a imagem base do Eclipse Temurin JDK 21 no Alpine
FROM eclipse-temurin:21-alpine

# Porta exposta
EXPOSE 8080

COPY ./ .

# Definir uma variável para o caminho do JAR
ARG JAR_FILE=target/traffic_management_spring_boot-0.0.1-SNAPSHOT.jar

# Copiar o arquivo JAR para o contêiner
ADD ${JAR_FILE} app.jar

# Executar o JAR com o perfil de producao ativo
ENTRYPOINT ["java", "-jar", "/app.jar"]